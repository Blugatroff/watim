                    }
                    case Struct -> {}
                } $custom-type
            }
            case Ptr -> {
                ~ match {
                    case Custom -> {
                        @custom-type
                        $ctx.type-lookup &custom-type.type-definition lookup-type match {
                            case Variant -> { drop $ctx.ctx $field-name "variants do not have fields" abort<Array<FieldAccess>> break }
                            case Struct -> {}
