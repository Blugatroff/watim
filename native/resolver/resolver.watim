fn resolve-call-word(ctx: .WordCtx, word: .P:Call) -> Result<Call, ResolveError> { block {
    $word match {
        case Local -> {
            @word
            $ctx.ctx $ctx.imports &word.generic-arguments resolve-types match {
                case Error -> { make Result<Call, ResolveError>.Error break }
                case Success -> {}
