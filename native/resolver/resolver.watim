            $ctx $mapping &custom.generic-arguments fill-holes-all match {
                case Error -> { make Result<Type, ResolveError>.Error break }
                case Success -> {}
            }
            make CustomTypeType make Type.Custom
        }
        case Bool -> { $type ~ }
        case I8 -> { $type ~ }
        case I32 -> { $type ~ }
        case I64 -> { $type ~ }
        case Generic -> { drop $type ~ }
    } make Result<Type, ResolveError>.Success
} }

fn fill-holes-all(ctx: .WordCtx, mapping: .Map<Token, .Type>, types: .Array<Type>) -> Result<Array<Type>, ResolveError> {
    $ctx.persistent $types.len Array:new-with-capacity<Type> @filled
