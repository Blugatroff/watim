        }
        case Fun -> {
            @fun
            $fun.token
            $ctx $mapping &fun.parameters fill-holes-all match {
                case Error -> { make Result<Type, ResolveError>.Error break }
                case Success -> {}
            }
            $ctx $mapping &fun.returns    fill-holes-all match {
                case Error -> { make Result<Type, ResolveError>.Error break }
                case Success -> {}
