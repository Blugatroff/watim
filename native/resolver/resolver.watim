    ptr-I8: .Type
    ptr-I32: .Type
    I32: .Type
    Bool: .Type
    signatures: .Array<Signature>
    globals: .Map<ByteSlice, Global>
    struc-lit-ctx: Maybe<.StructLitCtx>
    brek-stacks: Maybe<.Array<BreakStack>>
    blok-returns: Maybe<.Array<Type>>
